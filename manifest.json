{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.2",
  "description": "__MSG_extDescription__",
  "icons" : {
    "16" : "png/radio16.png",
    "48" : "png/radio48.png",
    "128" : "png/radio128.png"
  },
  "browser_action": {
    "default_icon": "png/radio16.png",
    "default_popup" : "html/notice.html",
    "default_title" : "__MSG_extName__"
  },
  "background": {
    "scripts": [
      "js/jquery-1.9.1.min.js",
      "js/detect_timezone.js",
      "js/background.js"
    ]
  },
  "options_page": "html/options.html",
  "default_locale" : "en",
  "permissions": [
    "tts",
    "notifications",
    "tabs",
    "background",
    "http://wcpe.org/*",
    "http://theclassicalstation.org/*",
    "http://*.arkivmusic.com/"
  ]
}